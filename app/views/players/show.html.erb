<div class="page-header">
  <h1><%= @player.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Image</dt>
  <dd><img src="<%= @player.image_url %>" width="360"></dd>
  <dt></dt><dd></dd>
  <dt>Team</dt>
  <dd><%= @player %></dd>
</dl>

<div>
  <form action="/create_favorite" class="form-horizontal">
      <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="OWN" class="btn btn-heart">
  </form>
</div>
<p></p>

  <!-- Label and input for content -->
  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">
      Content
    </label>

    <div class="col-sm-5">
      <textarea id="content" name="content" placeholder="comment" class="form-control" rows="3"></textarea>
    </div>
  </div>

  <!-- Label and input for player_id -->
  <div class="form-group">
    <div class="col-sm-10">
      <input type="hidden" id="player_id" name="player_id" placeholder="player" class="form-control" value="<%= @player.id %>">
    </div>
  </div>


  <!-- Label and input for user_id -->
  <div class="form-group">
      <div class="col-sm-10">

      <input type ="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value= "<%= current_user.id %>">

    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Comment" class="btn btn-primary">
    </div>
  </div>
</form>

