<div class="page-header">
  <h1>Add Player</h1>
</div>

<% if @player.errors.any? %>
  <% @player.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_player" class="form-horizontal">

  <!-- Label and input for name -->
  <div class="form-group">

    <label for="name" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">

      <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @player.name %>">

    </div>

  </div>


  <!-- Label and input for position -->
  <div class="form-group">

    <label for="position" class="col-sm-2 control-label">
      Position
    </label>
    <div class="col-sm-10">

      <input type="text" id="position" name="position" placeholder="Position" class="form-control" value="<%= @player.position %>">

    </div>

  </div>


  <!-- Label and input for image_url -->
  <div class="form-group">

    <label for="image_url" class="col-sm-2 control-label">
      Image url
    </label>
    <div class="col-sm-10">

      <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control" value="<%= @player.image_url %>">

    </div>

  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Player" class="btn btn-primary">
    </div>
  </div>
</form>
