<div class="page-header">
  <h1>Add Play</h1>
</div>

<% if @play.errors.any? %>
  <% @play.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_play" class="form-horizontal">

  <!-- Label and input for type -->
  <div class="form-group">

    <label for="type" class="col-sm-2 control-label">
      Type
    </label>
    <div class="col-sm-10">

      <input type="text" id="type" name="type" placeholder="Type" class="form-control" value="<%= @play.type %>">

    </div>

  </div>


  <!-- Label and input for player -->
  <div class="form-group">

    <label for="type" class="col-sm-2 control-label">
      Player
    </label>
    <div class="col-sm-10">

      <input type="text" id="player" name="player" placeholder="Player" class="form-control" value="<%= @play.player %>">

    </div>

  </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Play" class="btn btn-primary">
    </div>
  </div>
</form>
